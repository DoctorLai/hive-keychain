{
  "presets": [
      [
          "@babel/preset-env",
          {
              "modules": false
          }
      ],
      "@babel/preset-react"
  ],
  "plugins": [
      "react-hot-loader/babel",
      [
        "module-resolver",
        {
          "root": ["."],
          "alias": {
            "@popup": "./src/popup"
          },
          "extensions": [
            ".js",
            ".json",
            ".ts",
            ".jsx"
          ]
        }
        ]
  ]
}